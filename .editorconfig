# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_size = 4
indent_style = space

[*.md]
max_line_length = 100

[*.toml]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2
